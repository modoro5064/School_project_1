<?xml version="1.0" encoding="utf-8"?>

<!--	<LinearLayout	-->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="start"
	android:background="@android:color/white"
	android:orientation="vertical"
	android:visibility="visible">


	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#D4E5E8">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/img_map_mark"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@android:color/transparent" />

			<ListView
				android:id="@+id/myListView"
				android:layout_width="match_parent"
				android:layout_height="607dp"
				android:background="#000000"
				android:divider="#55FFFFFF"
				android:dividerHeight="2dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:scrollbars="vertical"
				android:visibility="invisible" />


		</LinearLayout>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:background="@drawable/text_bubble"
			android:orientation="vertical">

		</LinearLayout>

		<FrameLayout
			android:id="@+id/floor1_frame"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			android:layout_marginTop="180dp"
			android:background="@drawable/floor_1st"
			android:visibility="visible">

		</FrameLayout>

		<FrameLayout
			android:id="@+id/frame_layout_2"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<Button
				android:id="@+id/button2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="490dp"
				android:background="@drawable/button_round_style"
				android:onClick="buttonOnClick"
				android:text="+"
				android:textColor="@android:color/white"
				android:textSize="40dp" />

			<Button
				android:id="@+id/button3"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginLeft="90dp"
				android:layout_marginTop="510dp"
				android:background="@drawable/ripple_sample"
				android:onClick="buttonOnClick_1"
				android:text="商家總覽"
				android:visibility="invisible" />

			<Button
				android:id="@+id/button4"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginLeft="180dp"
				android:layout_marginTop="510dp"
				android:background="@drawable/ripple_sample"
				android:onClick="buttonOnClick_2"
				android:text="地點標記"
				android:visibility="invisible" />

			<Button
				android:id="@+id/button5"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginLeft="180dp"
				android:layout_marginTop="510dp"
				android:background="@drawable/ripple_sample"
				android:onClick="buttonOnClick_3"
				android:text="網站導覽"
				android:visibility="invisible" />

			<TextView
				android:id="@+id/textView"
				android:layout_width="230dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="100dp"
				android:background="#D4E5E8"
				android:text="Destination Selected:"
				android:textSize="24sp"
				android:visibility="visible" />

			<ImageView
				android:id="@+id/pointer"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="300dp"
				android:background="@drawable/pointer3"
				android:visibility="invisible" />

			<Spinner
				android:id="@+id/spinner"
				android:layout_width="130dp"
				android:layout_height="30dp"
				android:layout_marginLeft="235dp"
				android:layout_marginTop="105dp"
				android:background="#D4E5E8"
				android:dropDownWidth="match_parent"
				android:overScrollMode="always"
				android:verticalScrollbarPosition="right" />

		</FrameLayout>
		<![CDATA[







		android:text="Button" />



	]]>
	</FrameLayout>

	<LinearLayout
		android:id="@+id/sidebar"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="@android:color/white"
		android:orientation="vertical">

		<ToggleButton
			android:id="@+id/sidebar_toggle_1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:checked="true"
			android:text="Floor 1"
			android:textOff="未選取"
			android:textOn="Floor 1" />

		<ToggleButton
			android:id="@+id/sidebar_toggle_2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Floor 2"
			android:textOff="未選取"
			android:textOn="Floor 2" />
	</LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
	<!--	</LinearLayout> -->
